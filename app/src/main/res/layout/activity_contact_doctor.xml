<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ContactDoctorActivity"
    android:background="@color/soft_background">

    <Button
        android:id="@+id/buttonSendEmergencies"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="@string/send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutCheckBoxes"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCheckBoxes"
        app:layout_constraintVertical_bias="0.474" />

    <ProgressBar
        android:id="@+id/progressBarSendEmergencies"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSendEmergencies"
        app:layout_constraintEnd_toEndOf="@+id/buttonSendEmergencies"
        app:layout_constraintStart_toStartOf="@+id/buttonSendEmergencies"
        app:layout_constraintTop_toTopOf="@+id/buttonSendEmergencies" />

    <LinearLayout
        android:id="@+id/linearLayoutCheckBoxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/explanationFeedbackTextView"
        app:layout_constraintTop_toBottomOf="@+id/explanationFeedbackTextView"
        app:layout_constraintVertical_bias="0.1">

        <CheckBox
            android:id="@+id/checkBoxEmergency1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/emergency1"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBoxEmergency2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/emergency2"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBoxEmergency3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:text="@string/emergency3"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBoxEmergency4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:text="@string/emergency4"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/explanationFeedbackTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:lineSpacingMultiplier="1.5"
        android:text="@string/explanation_contact_doctor"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/errorMessageContactDoctorActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/server_not_responding"
        android:visibility="invisible"
        android:textColor="@color/error_red"
        android:textSize="16sp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSendEmergencies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCheckBoxes"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>