<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EnterMedicalCardIdActivity"
    android:background="@color/soft_background">

    <TextView
        android:id="@+id/medical_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medical_card_id"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/step1TextView"
        app:layout_constraintTop_toBottomOf="@+id/step1TextView"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/step1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registrationStep1"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" />

    <EditText
        android:id="@+id/editTextMedicalCardID"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/medical_card_id_hint"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/medical_card_id"
        app:layout_constraintTop_toBottomOf="@+id/medical_card_id"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/buttonContinueToStep2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/Continue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorMessageRegistrationStep1"
        app:layout_constraintVertical_bias="0.485" />

    <ProgressBar
        android:id="@+id/progressBarRegistrationStep1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/buttonContinueToStep2"
        app:layout_constraintEnd_toEndOf="@+id/buttonContinueToStep2"
        app:layout_constraintStart_toStartOf="@+id/buttonContinueToStep2"
        app:layout_constraintTop_toTopOf="@+id/buttonContinueToStep2" />

    <TextView
        android:id="@+id/errorMessageRegistrationStep1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/patientNotFound"
        android:textColor="@color/error_red"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/editTextMedicalCardID"
        app:layout_constraintTop_toBottomOf="@+id/editTextMedicalCardID"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>